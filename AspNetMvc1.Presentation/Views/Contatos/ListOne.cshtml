@using AspNetMvc1.Presentation.Models
@model List<ContatoViewModel>

@{
    ViewBag.Title = "ListOne";
}

<h2>Lista de Emails</h2>



@using (Html.BeginForm("ListOne", "Contatos"))
{
    @Html.AntiForgeryToken()

    <table class="table">
        <tr>
            <th>
                Nome
            </th>
            <th>
                Sobrenome
            </th>
            <th>
                Email
            </th>
            <th>
                IsSelected
            </th>
        </tr>
        @for (int i = 0; i < Model.Count; i++)
        {
        <tr>

            @Html.HiddenFor(model => model[i].Id)

            <td>
                @Html.DisplayFor(model => model[i].nome)
                @Html.HiddenFor(model => model[i].nome)
            </td>

            <td>
                @Html.DisplayFor(model => model[i].sobreNome)
                @Html.HiddenFor(model => model[i].sobreNome)
            </td>

            @Html.HiddenFor(model => model[i].telefone)

            <td>
                @Html.DisplayFor(model => model[i].email)
                @Html.HiddenFor(model => model[i].email)
            </td>

            <td>
                @Html.EditorFor(model => model[i].isSelected)
            </td>
        </tr>
        }
    </table>
        
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Salvar e ver lista de telefones" class="btn btn-default" />
        </div>
    </div>
}


